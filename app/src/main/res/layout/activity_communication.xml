<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bluetooth.printer.toshiba.CommunicationActivity">

    <Button
        android:id="@+id/BttonPortOpen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickButtonPortOpen"
        android:text="@string/btnPortOpen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinnerMode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/planets"
            android:prompt="@string/planet_prompt" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/writeData" />

            <EditText
                android:id="@+id/WriteDataEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2" />
        </TableRow>

        <Button
            android:id="@+id/BttonWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonWrite"
            android:text="@string/btnWrite" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnReadData" />

            <EditText
                android:id="@+id/ReadDataEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2" />
        </TableRow>

        <Button
            android:id="@+id/BttonRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonRead"
            android:text="@string/btnRead" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txtStatus" />

            <EditText
                android:id="@+id/StatusDataEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2" />
        </TableRow>

        <Button
            android:id="@+id/BttonStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonStatus"
            android:text="@string/btnStatus" />

        <Button
            android:id="@+id/BttonReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickButtonReturn"
            android:text="@string/retur"/>
    </LinearLayout>
</LinearLayout>