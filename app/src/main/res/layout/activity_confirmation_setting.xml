<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_view"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/confirmation_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_temperature"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"/>
        <RadioGroup
            android:id="@+id/radio_group_tempe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_30"
                android:textColor="@color/black"
                android:text="@string/living_type_1"
                android:textSize="@dimen/font_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14"
                android:text="@string/living_type_0"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_confirm_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_text_below"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_title_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_title_below"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_title"
            android:background="@drawable/edittextbackground"
            android:paddingLeft="05dp"
            android:singleLine="true"
            android:maxLength="25"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_subtitle_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_subtitle_below"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_subtitle"
            android:background="@drawable/edittextbackground"
            android:paddingLeft="05dp"
            android:singleLine="true"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>
    <TextView
        android:id="@+id/tv_confirm_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_text_above"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_title_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_title_above"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_title"
            android:background="@drawable/edittextbackground"
            android:paddingLeft="05dp"
            android:singleLine="true"
            android:maxLength="25"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_subtitle_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_subtitle_above"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/enter_subtitle"
            android:background="@drawable/edittextbackground"
            android:paddingLeft="05dp"
            android:singleLine="true"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_delay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_screen_delay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/screen_delay"
            android:background="@drawable/edittextbackground"
            android:paddingLeft="05dp"
            android:singleLine="true"
            android:maxLength="25" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/btn_exit"
        style="@style/buttonNumberStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:onClick="onclick"
        android:text="Save"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

</LinearLayout>