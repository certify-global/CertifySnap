<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_green"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back"
            android:onClick="onParamterback" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:text="@string/device_settings"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btn_save_device"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/setting_activate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_5"
        android:onClick="onclick">

        <TextView
            android:id="@+id/activate_tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:text="@string/keep_device_online"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switch_activate_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:checked="true"
            android:src="@mipmap/enter"
            android:theme="@style/SwitchTheme" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView android:id="@+id/tv_end_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/endpoint"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/et_end_url"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/edittextbackground"
            android:hint="@string/endpoint" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView android:id="@+id/tv_device_name_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/device_name"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/et_device_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_5"
            android:background="@drawable/edittextbackground"
            android:hint="@string/device_name" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView android:id="@+id/tv_password_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/device_password"
            android:textColor="@color/black"
            android:textSize="20sp" />



        <EditText
            android:id="@+id/et_device_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbackground"
            android:hint="@string/acces_password"
            android:inputType="numberPassword"
            android:padding="@dimen/margin_5"
            android:maxLength="20" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView android:id="@+id/tv_device_settings_str"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:text="@string/device_settings"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_device_settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Local"
            android:padding="@dimen/margin_10" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blue" />
    <TextView android:id="@+id/tv_device_manage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:layout_margin="@dimen/margin_5"
        android:text="@string/data_management"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_50"
        android:textSize="20sp" />
    <CheckBox
        android:id="@+id/cb_enable_do_not_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:text="@string/do_not_sync"
        android:layoutDirection="rtl"
        android:textSize="@dimen/text_18"/>
</LinearLayout>