<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PrinterWifiSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back"
            android:onClick="onParamterback"
            tools:ignore="OnClick" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:text="Select Printer"
            android:textColor="#ffffff"
            android:textSize="22sp"
            tools:ignore="OnClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_enter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="Please enter the IP and Mac addresses of the Printer"
            android:textColor="@color/black"
            android:textSize="18sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edittext_printer_ip"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:hint="IP address"
                android:background="@drawable/edittextbackground"
                android:inputType="phone"
                android:paddingLeft="@dimen/size_05"/>

            <EditText
                android:id="@+id/edittext_printer_mac"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:hint="Mac address"
                android:background="@drawable/edittextbackground"
                android:paddingLeft="@dimen/size_05"/>

            <Button
                android:id="@+id/printer_add"
                android:layout_width="140dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:enabled="true"
                android:text="Add" />

        </LinearLayout>

        <TextView
            android:id="@+id/ip_input_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext_login"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorRed"
            android:textSize="13sp">
        </TextView>

    </LinearLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_weight="8"
        android:paddingTop="10dp">

        <ListView
            android:id="@id/android:list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </TableRow>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:enabled="true"
            android:text="Search" />

        <Button
            android:id="@+id/btPrinterSettings"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:enabled="true"
            android:text="@string/button_settings" />
    </LinearLayout>
</LinearLayout>