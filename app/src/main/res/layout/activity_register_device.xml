<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splash_white">

    <LinearLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back"
            android:onClick="onParamterback" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:text="@string/add_device_info"/>


    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/toolbar_layout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_device_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittextbackground"
            android:hint="@string/device_name"
            android:inputType="text"
            android:paddingLeft="@dimen/size_05" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/serial_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_device_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_serial_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/serial_number"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/imei_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/serial_number_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_imei_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/imei_number"
            android:textSize="@dimen/size_20"
            android:textColor="@color/black"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/text_input_sno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imei_number_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_sno"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittextbackground"
            android:hint="@string/sno"
            android:inputType="text"
            android:paddingLeft="@dimen/size_05" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:visibility="gone"
        android:id="@+id/text_input_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_input_sno"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_imei"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/edittextbackground"
            android:hint="@string/imei"
            android:inputType="text"
            android:paddingLeft="@dimen/size_05" />

    </com.google.android.material.textfield.TextInputLayout>
   <TextView
       android:visibility="gone"
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textColor="@color/black"
        android:textSize="@dimen/size_20"
        android:layout_below="@+id/text_input_imei"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"/>

    <RadioGroup
        android:visibility="gone"
        android:id="@+id/radio_group_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_status"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp" >

        <RadioButton
            android:id="@+id/radio_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_30"
            android:text="@string/active"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:theme="@style/MyCheckBox" />

        <RadioButton
            android:id="@+id/radio_inactive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_active"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:theme="@style/MyCheckBox" />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imei_number_layout"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

    <Button
        android:id="@+id/btn_close"
        style="@style/buttonNumberStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:onClick="onclick"
        android:text="@string/close_button"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"/>

    <Button
        android:id="@+id/btn_save"
        style="@style/buttonNumberStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape"
        android:onClick="onclick"
        android:text="@string/save_button"
        android:textSize="25sp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginRight="@dimen/size_20"/>

</LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_serial_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="left"
        android:paddingLeft="@dimen/size_20"
        android:paddingBottom="20dp"
        android:text="@string/app_serial"
        android:textSize="22dp"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="@string/app_version"
        android:textSize="22dp"/>
</RelativeLayout>