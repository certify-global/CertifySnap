<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.certify.snap.activity.SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingLeft="5sp"
            android:text="Settings"
            android:textColor="@color/dark_text_color"
            android:textSize="30sp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/work_flow"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <RadioGroup
                android:id="@+id/radio_group_work_flow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="3">

                <RadioButton
                    android:id="@+id/radio_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_temp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/face_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera_face"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/setting_activate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/activate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/add_cloud"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/setting_activate_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/card"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Activate card"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/blue" />-->

        <RelativeLayout
            android:id="@+id/setting_init"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/init"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/txt_data_management_title"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/blue"
             android:visibility="gone"/>-->

        <RelativeLayout
            android:id="@+id/setting_updatelist"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/updatedatabase"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Update Database"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/setting_managment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/management"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Member Management"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/setting_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/register"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Member Register"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/setting_parameter"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick">

            <TextView
                android:id="@+id/parameter_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Parameter Setting"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/setting_led"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/led"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="LED Setting"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/setting_record"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawableLeft="@mipmap/record"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="Record"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/setting_temperature"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="visible">

            <TextView
                android:id="@+id/setTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/SetTemp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/setting_upload"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="visible">

            <TextView
                android:id="@+id/upload_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/upload_logo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />


        <RelativeLayout
            android:id="@+id/setting_access_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="visible">

            <TextView
                android:id="@+id/access_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/acces_password"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <RelativeLayout
            android:id="@+id/setting_endpoint"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="onclick"
            android:visibility="visible">

            <TextView
                android:id="@+id/endpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="4dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@string/endpoint"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="6dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:src="@mipmap/enter" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/blue" />

        <Button
            android:id="@+id/btn_exit"
            style="@style/buttonNumberStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_shape"
            android:onClick="onclick"
            android:text="Save"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>