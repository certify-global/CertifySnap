                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:text="@string/member_management_setting"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/enter" />

            </RelativeLayout>

            <View
                android:id="@+id/member_management_setting_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue" />
            <RelativeLayout
                android:id="@+id/touchless_interaction"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="onclick"
                android:visibility="visible">

                <TextView
                    android:id="@+id/touchless_interaction_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="4dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:text="@string/touchless_interaction_setting"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/enter" />

            </RelativeLayout>

            <View
                android:id="@+id/touchless_interaction_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue" />

            <RelativeLayout
                android:id="@+id/setting_record"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:onClick="onclick"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="4dp"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingLeft="6dp"
                    android:text="@string/record"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:src="@mipmap/enter" />

            </RelativeLayout>

            <View
                android:id="@+id/record_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_exit"
                style="@style/buttonNumberStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_shape"
                android:onClick="onclick"
                android:text="Close"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_5">


                <TextView
                    android:id="@+id/tv_serial_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="@dimen/margin_20"
                    android:text="@string/app_serial"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/app_version"
                    android:textSize="@dimen/font_18" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="start"
                android:paddingStart="@dimen/margin_20"
                android:text="@string/device_name"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/tv_device_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="start"
                android:paddingStart="@dimen/margin_20"
                android:text="@string/device_settings"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/tv_device_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="start"
                android:paddingStart="@dimen/margin_20"
                android:text="@string/device_mode"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/tv_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="start"
                android:paddingStart="@dimen/margin_20"
                android:text="@string/online_device_activation_status"
                android:textSize="@dimen/font_18" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_connectivity_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="13dp"
        android:paddingStart="@dimen/margin_20"
        android:text="@string/connectivity_status"
        android:textSize="@dimen/font_18" />
</RelativeLayout>