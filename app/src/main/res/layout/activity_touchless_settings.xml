<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TouchlessSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back"
            android:onClick="onParamterback" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:text="@string/wave_setting"
            android:textColor="#ffffff"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_15"
            android:text="Enable Wave"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <RadioGroup
            android:id="@+id/radio_group_wave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_05"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_30"
                android:text="@string/living_type_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_wave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_type_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/wave_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_15"
        android:text="Wave Options"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_wave_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_15"
            android:text="Enable Questions and Answers"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <RadioGroup
            android:id="@+id/radio_group_enable_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_05"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_wave_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_30"
                android:text="@string/living_type_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_wave_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_type_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>

    </LinearLayout>

    <Spinner
        android:id="@+id/spinner_question_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginTop="@dimen/size_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_mask_enforcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_15"
            android:text="Enable Mask Enforcement(Prompt for mask Undetected Response)"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <RadioGroup
            android:id="@+id/radio_group_mask_enforcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_05"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_mask_enforcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_30"
                android:text="@string/living_type_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_mask_enforcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_type_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_voice_recognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_15"
            android:text="Enable voice recognition"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <RadioGroup
            android:id="@+id/radio_group_voice_recognition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_05"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_voice_recognition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_30"
                android:text="@string/living_type_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_voice_recognition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_type_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enable_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_15"
            android:text="Show wave question progress view bar"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <RadioGroup
            android:id="@+id/radio_group_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginTop="@dimen/size_05"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_30"
                android:text="@string/living_type_1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_no_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/living_type_0"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_14"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_wave_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextWaveFooter"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/edittextbackground"
                android:hint="@string/wave_instructions"
                android:paddingLeft="05dp" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

</LinearLayout>