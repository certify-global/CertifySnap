<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TouchlessSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_05"
        android:paddingBottom="@dimen/size_05">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back"
            android:onClick="onParamterback" />

        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:text="@string/touchless_setting"
            android:textColor="#ffffff"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enable_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/enable_wave"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_wave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_wave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_wave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/wave_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_15"
                android:text="@string/wave_options"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enable_wave_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/enable_ques_ans"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_enable_questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_wave_questions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_wave_questions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_question_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_20"
                android:layout_marginTop="@dimen/size_15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gesture_exit_op"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/gesture_exit_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/gesture_exit_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/gesture_exit_rb_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/gesture_exit_rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/gesture_exit_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/gesture_exit_text"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edittextbackground"
                        android:hint="@string/gesture_exit_hint"
                        android:paddingLeft="05dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enable_mask_enforcement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/enable_mask_enforce"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_mask_enforcement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_mask_enforcement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_mask_enforcement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_mask_enforce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextMaskEnforce"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edittextbackground"
                        android:hint="@string/mask_enforce_instructions"
                        android:paddingLeft="05dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/enable_voice_recognition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/enable_voice_recognition"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_voice_recognition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_voice_recognition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_voice_recognition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wave_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/show_wave_image"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_wave_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_wave_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_wave_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enable_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/show_wave_ques"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />

                <RadioGroup
                    android:id="@+id/radio_group_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>
                <TextView
                    android:id="@+id/tv_touch_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_15"
                    android:text="@string/enable_touch_mode"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18" />
                <RadioGroup
                    android:id="@+id/radio_group_touch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_05"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes_touch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_30"
                        android:text="@string/living_type_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                    <RadioButton
                        android:id="@+id/radio_no_touch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/living_type_0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14"
                        android:theme="@style/MyCheckBox" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_wave_footer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_marginRight="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextWaveFooter"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edittextbackground"
                        android:hint="@string/wave_instructions"
                        android:paddingLeft="05dp" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>