<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_edit"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:background="@mipmap/edit_black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="UPDATE"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/dialog_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:background="@mipmap/exit" />

    </LinearLayout>

    <LinearLayout android:id="@+id/linear_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <ImageView android:id="@+id/dialog_faceimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/face_black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/id4" />

            <TextView android:id="@+id/dialog_text_userid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="userid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_text_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:paddingLeft="10dp"
                android:text="Full Name"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/name2"
                android:visibility="gone"/>

            <TextView android:id="@+id/dialog_text_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Last Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView android:id="@+id/dialog_text_member_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_shape"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Member Id" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView android:id="@+id/dialog_text_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_shape"
                android:textColor="@color/black"
                android:text="Phone Number" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_text_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_shape"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_text_accessid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@drawable/edit_shape"
                android:text="Access Id"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_text_unique_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:text="Unique Id"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/time2" />

            <TextView android:id="@+id/dialog_text_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="expiretime" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_edit_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_image"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/id3" />

            <TextView android:id="@+id/dialog_edit_userid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:gravity="center_vertical"
                android:textColor="@color/skyblue"
                android:textSize="17sp"
                android:text="userid" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/name1"
                android:visibility="gone"/>


            <EditText android:id="@+id/dialog_edit_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="First Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText android:id="@+id/dialog_edit_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Last Name" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_member_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_edit_member_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="@drawable/edit_shape"
                android:hint="Member Id"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/id3"
                android:visibility="gone"/>

            <EditText android:id="@+id/dialog_edit_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="Phone Number" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_edit_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Email Address"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_access_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_edit_accessid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Access Id"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_unique_id"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dialog_edit_uniqueid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Unique Id"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="textEmailAddress"
                android:textColor="@color/skyblue"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_image"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/time1" />

            <EditText android:id="@+id/dialog_edit_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/edit_shape"
                android:inputType="datetime"
                android:maxLength="19"
                android:textColor="@color/skyblue"
                android:textColorHint="@color/skyblue"
                android:hint="expiretime(2018-11-11 11:11:11)" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button android:id="@+id/btn_update"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:background="@drawable/btn_shape"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Update"/>

        <Button
            android:id="@+id/btn_enroll"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_shape"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="@string/access_control_enroll"/>

    </LinearLayout>


</LinearLayout>