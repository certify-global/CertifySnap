<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".fragment.TouchModeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBgGreen"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/titles_touch"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:onClick="onParamterback"
            android:text="TouchMode"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/btn_save_touch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="right|center"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/locale_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:padding="@dimen/size_30"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locale_settings_tach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lang_choose_your"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_22" />


        <RadioGroup
            android:id="@+id/radio_group_lang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_20"
                android:text="English"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone"
                android:theme="@style/MyCheckBox" />

            <RadioButton
                android:id="@+id/radio_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spanish"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/size_20"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone"
                android:theme="@style/MyCheckBox" />
            <RadioButton
                android:id="@+id/radio_french"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="French"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/size_20"
                android:textSize="@dimen/text_size_18"
                android:visibility="gone"
                android:theme="@style/MyCheckBox" />

        </RadioGroup>

        <TextView
            android:id="@+id/tv_message_touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginTop="@dimen/size_50"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_20"
            android:gravity="center"
            android:text="@string/lang_wave_message"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />
        <Button
            android:id="@+id/bt_wave_start_touch"
            style="@style/checkInButtonNumberStyle"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:background="@drawable/btn_shape"
            android:text="@string/start"/>
    </LinearLayout>


</LinearLayout>