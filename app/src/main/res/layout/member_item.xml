<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/member_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/face_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/member_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/member_image"
                android:gravity="center_vertical"
                android:text="Member"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/member_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/member_image"
                android:gravity="center_vertical"
                android:text="Member"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/member_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/member_image"
                android:gravity="center_vertical"
                android:text="Member"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/member_mobile"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/member_image"
                android:gravity="center_vertical"
                android:text="Member"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/member_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/member_image"
                android:gravity="center_vertical"
                android:text="Member"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:src="@mipmap/enter"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical|right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightwhite" />


</LinearLayout>