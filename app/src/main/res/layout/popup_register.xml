<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="REGISTER"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/popup_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@mipmap/exit" />

    <LinearLayout
        android:id="@+id/linear_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_exit"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/popup_faceimg"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_margin="6dp"
            android:src="@mipmap/face_black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button android:id="@+id/popup_take_photo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_shape"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="TAKE"/>

            <Button
                android:id="@+id/popup_use_photo"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_shape"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="USE PHOTO"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_image"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="@drawable/shape"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linear_first_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/popup_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:hint="First Name"
                android:background="@drawable/edit_shape"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_last_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/popup_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:hint="Last Name"
                android:background="@drawable/edit_shape"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_mobile"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/id3"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/popup_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Email Address"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_member_id"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/id3"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/popup_mobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Phone Number"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_member_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/popup_member_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Member Id"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_access_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/popup_access_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="Access Id"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_unique_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_first_name"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/popup_unique_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="unique Id"
                android:padding="5dp"
                android:background="@drawable/edit_shape"
                android:inputType="number"
                android:textColor="@color/skyblue"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_mobile"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/popup_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:hint="status(0/1)"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/skyblue"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_expiretime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/linear_mobile"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:src="@mipmap/time1" />

            <EditText
                android:id="@+id/popup_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:hint="expiretime(2018-11-11 11:11:11)"
                android:background="@drawable/edit_shape"
                android:inputType="datetime"
                android:maxLength="19"
                android:textColor="@color/skyblue"
                android:textColorHint="@color/skyblue" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linear_body"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_shape"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>