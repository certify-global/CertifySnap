<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/four_questions_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fourQ_image1"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:src="@drawable/no_tick" />

    <View
        android:id="@+id/fourQ_view1"
        android:layout_width="95dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@color/very_light_gray" />

    <ImageView
        android:id="@+id/fourQ_image2"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:src="@drawable/no_tick" />

    <View
        android:id="@+id/fourQ_view2"
        android:layout_width="95dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@color/very_light_gray" />

    <ImageView
        android:id="@+id/fourQ_image3"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:src="@drawable/no_tick" />

    <View
        android:id="@+id/fourQ_view3"
        android:layout_width="95dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@color/very_light_gray" />

    <ImageView
        android:id="@+id/fourQ_image4"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:src="@drawable/no_tick" />
    <View
        android:id="@+id/fourQ_view4"
        android:layout_width="95dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:background="@color/very_light_gray" />

    <ImageView
        android:id="@+id/fourQ_image5"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:src="@drawable/no_tick" />

</LinearLayout>